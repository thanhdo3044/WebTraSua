@model IEnumerable<WebTraSua.Models.BinhLuan>

@{
	ViewBag.Title = "Index";
	Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">

	<!-- Main content -->
	<section class="content my-5">

		<!-- Default box -->
		<div class="card">
			<div class="card-header">

				<div class="row">
					<div class="col-md-6">
						<strong>DANH SÁCH BÌNH LUẬN</strong>
					</div>
					<div class="col-md-6 text-right">
						@Html.ActionLink("Create New", "Create")
					</div>
				</div>

			</div>
			<div class="card-body">
				<table class="table table-bordered table-striped">
					<tr>
						<th>
							@Html.DisplayNameFor(model => model.NguoiDung.HoTenND)
						</th>
						<th>
							@Html.DisplayNameFor(model => model.SanPham.MaDM)
						</th>
						<th>
							@Html.DisplayNameFor(model => model.NoiDungBL)
						</th>
						<th>
							@Html.DisplayNameFor(model => model.TrangThaiBL)
						</th>
						<th></th>
					</tr>

					@foreach (var item in Model)
					{
						<tr>
							<td>
								@Html.DisplayFor(modelItem => item.NguoiDung.HoTenND)
							</td>
							<td>
								@Html.DisplayFor(modelItem => item.SanPham.MaDM)
							</td>
							<td>
								@Html.DisplayFor(modelItem => item.NoiDungBL)
							</td>
							<td>
								@Html.DisplayFor(modelItem => item.TrangThaiBL)
							</td>
							<td>
								@Html.ActionLink("Edit", "Edit", new { maSP = item.MaSP, maND = item.MaND }) |
								@Html.ActionLink("Details", "Details", new { maSP = item.MaSP, maND = item.MaND }) |
								@Html.ActionLink("Delete", "Delete", new { maSP=item.MaSP, maND=item.MaND})
							</td>
						</tr>
					}

				</table>
			</div>
		</div>
		<!-- /.card -->
	</section>
	<!-- /.content -->
</div>
<!-- /.content-wrapper -->

