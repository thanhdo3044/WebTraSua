@model WebTraSua.Models.DanhMuc

@{
	ViewBag.Title = "Edit";
	Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@using (Html.BeginForm())
{
	@Html.AntiForgeryToken()
	@Html.ValidationSummary(true, "", new { @class = "text-danger" })


	<!-- Content Wrapper. Contains page content -->
	<div class="content-wrapper">

		<!-- Main content -->
		<section class="content my-5">

			<!-- Default box -->
			<div class="card">
				<div class="card-header">

					<div class="row">
						<div class="col-md-6">
							<strong>Sửa danh mục</strong>
						</div>
						<div class="col-md-6 text-right">
							<div class="col-md-6 text-right">
								<input type="submit" value="Sửa" class="btn btn-primary" />
								<a href="@Url.Action("Index","DanhMucs")" class="btn btn-primary">
									<i class="fas fa-file-export"></i>
									Về danh sách
								</a>
							</div>
						</div>
					</div>
				</div>
				<div class="card-body">
					@Html.HiddenFor(model => model.MaDM)

					<div class="form-group">
						@Html.LabelFor(model => model.TenDM, htmlAttributes: new { @class = "control-label col-md-2" })
						<div class="col-md-10">
							@Html.EditorFor(model => model.TenDM, new { htmlAttributes = new { @class = "form-control" } })
							@Html.ValidationMessageFor(model => model.TenDM, "", new { @class = "text-danger" })
						</div>
					</div>

					<div class="form-group">
						@Html.LabelFor(model => model.MotaDM, htmlAttributes: new { @class = "control-label col-md-2" })
						<div class="col-md-10">
							@Html.EditorFor(model => model.MotaDM, new { htmlAttributes = new { @class = "form-control" } })
							@Html.ValidationMessageFor(model => model.MotaDM, "", new { @class = "text-danger" })
						</div>
					</div>

					<div class="form-group">
						@Html.LabelFor(model => model.NgayTao, htmlAttributes: new { @class = "control-label col-md-2" })
						<div class="col-md-10">
							@Html.EditorFor(model => model.NgayTao, new { htmlAttributes = new { @class = "form-control" } })
							@Html.ValidationMessageFor(model => model.NgayTao, "", new { @class = "text-danger" })
						</div>
					</div>

					<div class="form-group">
						@Html.LabelFor(model => model.TrangThaiDM, htmlAttributes: new { @class = "control-label col-md-2" })
						<div class="col-md-10">
							@Html.EditorFor(model => model.TrangThaiDM, new { htmlAttributes = new { @class = "form-control" } })
							@Html.ValidationMessageFor(model => model.TrangThaiDM, "", new { @class = "text-danger" })
						</div>
					</div>
				</div>
			</div>
			<!-- /.card -->
		</section>
		<!-- /.content -->
	</div>
	<!-- /.content-wrapper -->

}

