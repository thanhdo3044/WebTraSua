@model IEnumerable<WebTraSua.Models.ChiTietHD>

@{
	ViewBag.Title = "Index";
	Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}


<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">

	<!-- Main content -->
	<section class="content my-5">

		<!-- Default box -->
		<div class="card">
			<div class="card-header">

				<div class="row">
					<div class="col-md-6">
						<strong>Ten Danh Muc</strong>
					</div>
					<div class="col-md-6 text-right">
						@Html.ActionLink("Create New", "Create")
					</div>
				</div>

			</div>
			<div class="card-body">
				<table class="table">
					<tr>
						<th>
							@Html.DisplayNameFor(model => model.HoaDon.MaND)
						</th>
						<th>
							@Html.DisplayNameFor(model => model.SanPham.MaDM)
						</th>
						<th>
							@Html.DisplayNameFor(model => model.SoLuong)
						</th>
						<th></th>
					</tr>

					@foreach (var item in Model)
					{
						<tr>
							<td>
								@Html.DisplayFor(modelItem => item.HoaDon.MaND)
							</td>
							<td>
								@Html.DisplayFor(modelItem => item.SanPham.MaDM)
							</td>
							<td>
								@Html.DisplayFor(modelItem => item.SoLuong)
							</td>
							<td>
								@Html.ActionLink("Edit", "Edit", new { maHD = item.MaHD,maSP = item.MaSP}) |
								@Html.ActionLink("Details", "Details", new { maHD = item.MaHD,maSP = item.MaSP }) |
								@Html.ActionLink("Delete", "Delete", new { maHD = item.MaHD, maSP = item.MaSP })
							</td>
						</tr>
					}

				</table>
			</div>
		</div>
		<!-- /.card -->
	</section>
	<!-- /.content -->
</div>
<!-- /.content-wrapper -->


