@model IEnumerable<WebTraSua.Models.Anh>

@{
	ViewBag.Title = "Index";
	Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">

	<!-- Main content -->
	<section class="content my-5">

		<!-- Default box -->
		<div class="card">
			<div class="card-header">

				<div class="row">
					<div class="col-md-6">
						<strong>NỘI DUNG ẢNH</strong>
					</div>
					<div class="col-md-6 text-right">
						@Html.ActionLink("Create New", "Create")
					</div>
				</div>

			</div>
			<div class="card-body">
				<table class="table table-bordered table-striped">
					<tr>
						<th>
							@Html.DisplayNameFor(model => model.DuongDan)
						</th>
						<th>
							@Html.DisplayNameFor(model => model.ThoiGianA)
						</th>
						<th></th>
					</tr>

					@foreach (var item in Model)
					{
						<tr>
							<td>
								@Html.DisplayFor(modelItem => item.DuongDan)
							</td>
							<td>
								@Html.DisplayFor(modelItem => item.ThoiGianA)
							</td>
							<td>
								@Html.ActionLink("Edit", "Edit", new { id = item.MaA }) |
								@Html.ActionLink("Details", "Details", new { id = item.MaA }) |
								@Html.ActionLink("Delete", "Delete", new { id = item.MaA })
							</td>
						</tr>
					}

				</table>
			</div>
		</div>
		<!-- /.card -->
	</section>
	<!-- /.content -->
</div>
<!-- /.content-wrapper -->


